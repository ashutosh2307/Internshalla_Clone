<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= job.title%></h1>
        
        <div style="width:30%; margin: 25px auto;">
            <form action="/jobs/<%=job._id%>?_method=PUT" method="POST">
                
                 <div class="form-group">
                            <input class="form-control" type="text" name="job[title]"  value="<%= job.title%>" required>
                        </div>
                        
                        <div class="form-group">
                            <input class="form-control" type="text" name="job[description]"  value="<%= job.description%>" required>
                        </div>
                        
                        <div class="form-group">
                            <input class="form-control" type="text" name="job[companyName]" value="<%= job.companyName%>" required>
                        </div>
                        
                        <div class="form-group">
                            <input class="form-control" type="text" name="job[experience]"  value="<%= job.experience%>" required>
                        </div>
                        
                        <div class="form-group">
                            <input class="form-control" type="text" name="job[qualification]"  value="<%= job.qualification%>" required>
                        </div>
                        
                        <div class="form-group">
                            <input class="form-control" type="text" name="job[salary]"  value="<%= job.salary%>" required>
                        </div>
                        
                        <div class="form-group">
                            <input class="form-control" type="text" name="job[keySkills]"  value="<%= job.keySkills%>" required>
                        </div>
                        
                        <div class="form-group">
                            <input class="form-control" type="text" name="job[author]"  value="<%= job.author%>" required>
                        </div>
                
                
                <div class="form-group">
                    <button class= "btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/jobs">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>